{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["DOM", "ES2020"],
        "module": "ESNext",
        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "useDefineForClassFields": true,
        "moduleResolution": "Bundler",
        "isolatedModules": true,
        "sourceMap": true,
        "baseUrl": "./frontend/src/",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": [
        "./frontend/src/**/*.tsx",
        "./frontend/src/**/*.ts"
    ]
}
